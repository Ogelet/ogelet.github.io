					transform rotate(45deg)
				&:nth-child(2),
				&:nth-child(3)
					display none
	.header_nav.active
		display flex
		flex-direction column
		position: fixed
		background #de9200
		top 0
		bottom 0
		right 0
		left 0
		min-height 150vh
		width 100%
		z-index 9000
