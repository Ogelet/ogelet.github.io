// Подключаем стили библиотек
@import '_libs.styl'

// Подключаем переменные
@import '_vars.styl'


html 
  line-height 1
  font-size 12px
  color textColor

body
  font-family mainFont

h1,h2,h3,h4,h5,h6
  margin 0

ul,li
  margin 0
  padding 0
  list-style-type none
  
p
  margin 0
  
a
  text-decoration none
  color black

audio,
canvas,
iframe,
img,
svg,
video
  vertical-align middle
  
textarea
  resize none

section
  position relative
  margin-bottom 20px

input,
select,
button
  outline none

*, *:before, *:after
  box-sizing border-box
  
.hide
  display none
  
.show
  display block
  
::-moz-selection 
  background: #b3d4fc;
  text-shadow: none;
  
::selection 
  background: #b3d4fc;
  text-shadow: none;
  
.clearfix:before,
.clearfix:after 
  content: " ";
  display: table;

.clearfix:after 
  clear: both;

.clearfix 
  *zoom: 1;
.container
  margin 0 auto
  max-width 950px
  display flex
  flex-basis 950px
.main_btn
  border 0
  background transparent
  color textColor
  text-transform uppercase
  font 400 12px mainFont
  display flex
  align-items center
  justify-content center
  transition all ease .2s
  cursor pointer
  height 30px
.btn--transparent
  border 1px solid transparent
  width 77px
.btn--transparent:hover
  border 1px solid #e5e4e2
.btn--blue
  background-color #4049ca
  color #fff
.btn--blue:hover
  background-color #2c35ab
.btn--blue-border
  border 1px solid #4049ca
  color #4049ca
  font-weight 500
  font-size 14px
.btn--blue-border:hover
  background-color #4049ca
  color #fff
.header_top-line
  background-color: #000
  color #fff
  font-size 11px
  text-transform uppercase
  font-weight 400
  height 30px
  display flex
  align-items center
  .header-item
    display flex
    align-items top
.header_top-line .container
  display flex
  justify-content space-between
.header-item-about
  display flex
  justify-content space-between
  flex-basis 330px
.heder-top-icon
  margin-right 10px
.header_middle-line
  height 105px
  background-color #fafafa
  .container
    display flex
    justify-content space-between
    height 100%
    align-items center
.header-item-title
  display flex
  align-items center
  justify-content center
  flex-direction column
.header-title
  text-transform uppercase
  font 400 28px mainFont
  color textColor
  text-align center
  letter-spacing 2px
  margin-bottom 6px
.header-desc
  text-align center
  font-size 12px
.header-item.hedear-item-cart
  display flex
  flex-basis 235px
  flex-wrap wrap
  justify-content space-between
  align-items center
  .search-form
    width 100%
    position relative
    margin-top 8px
  .search-input
    width 100%
    background-color transparent
    border 1px solid #e5e4e2
    border-radius 0
    height 30px
    font 400 12px mainFont
    color #3f3d3d
    padding-left 9px
    &::-webkit-input-placeholder
      opacity 1
    &:-ms-input-placeholder
      opacity 1
    &::-moz-placeholder
      opacity 1
    &:-moz-placeholder
      opacity 1
  .main_btn
    width 100px
  .btn-search
    height 30px
    width 30px
    border 0
    background-color transparent
    background-image: url("../img/search.png")
    background-repeat no-repeat
    background-position: center center
    position absolute
    top 0
    right 0
.header-slider-item
  background url("../img/bg-header.jpg") center top no-repeat
  height 440px
  .container
    display flex
    flex-direction column
    justify-content flex-start
    align-self center
.header-slider-text
  font 500 60px mainFont
  color #000
  display flex
  align-items center
  flex-direction column
  flex-basis 250px
  max-width: 250px
  margin-bottom 40px
  height 150px
  max-height 150px
  margin-top 100px
  .small-text
    font 400 30px mainFont
    margin-top 5px
  .middle-text
    font-size 40px
    margin-top 3px
.header-slider-item
  .btn--blue-border
    width 120px
  .btn-group
    display flex
    justify-content space-between
    flex-basis 250px
    max-width 250px
    flex-wrap wrap
    max-height 30px
.header-nav
  background-color #f0f0f0
  height 40px
  .container
    justify-content flex-start
    height 100%
    align-items center
.nav-link
  padding 13px 25px
  color mainColor
  font 400 13px mainFont
  text-transform uppercase
  &:hover
    background-color #e0e0e0
    










